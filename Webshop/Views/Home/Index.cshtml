@model Webshop.Models.HomeInformationModel

<div id="products">
    <h3>Login Page</h3>
</div>
<div class="login-textboxes">
    @using (Html.BeginForm("SubmitForms", "Home", FormMethod.Post))
    {
    <div>
        <table class="table login-textboxes" id="catalogIndexTable">
            <thead>
                    <tr>
                        <th>
                            Name:
                            @Html.TextBox("name")
                        </th>
                    </tr>
                    <tr>
                        <th>
                            Email:
                            @Html.TextBox("email")
                        </th>
                    </tr>
            </thead>
        </table>
    </div>
        <div>
            <button type="submit" class="btn btn-default">Login</button>
        </div>
    }
</div>